<%= form_with(model: registration, local: true) do |form| %>
  <% if registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :first_name, id: :name, placeholder:"First Name", required: true, data_validation_required_message: "Please enter your name." %>
      </div>

      <div class="form-group">
        <%= form.text_field :last_name, id: :name, placeholder:"Last Name", required: true %>
      </div>


      <div class="form-group">
        <%= form.email_field :email, id: :registration_email, placeholder:"Email", required: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :organization, id: :registration_organization, placeholder:"University", required: true %>
      </div>

      <div class="form-group">
        <%= form.text_field :linked_in, id: :registration_linked_in, placeholder:"LinkedIn (Optional)", required: false %>
      </div>

      <div class="form-group">
        <%= form.text_field :github, id: :registration_github, placeholder:"GitHub (Optional)", required: false %>
      </div>

      <div class="field">
        <label class="btn btn-primary" style="background-color:#607d8b;border-color:#607d8b;margin-left:145px">
          CV Letter (Optional)
          <span style="display:none;">
            <%= form.file_field :cv, id: :registration_cv, class: "btn btn-primary", required: false  %>
          </span>
        </label>
      </div>

      <div class="field">
        <label class="btn btn-primary" style="background-color:#607d8b;border-color:#607d8b;margin-left:145px">
          Resum√© (Optional)
          <span style="display:none;">
          <%= form.file_field :resume, id: :registration_resume, required: false  %>
          </span>
        </label>
      </div>
    </div>
    <div class="clearfix"></div>


    <div class="col-lg-12 text-center">
      <div id="success"></div>
      <br>
        <%= form.submit "Submit", id:"sendMessageButton", class:"btn btn-primary btn-xl text-uppercase"%>
    </div>
  </div>
<% end %>
